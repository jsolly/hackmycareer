---
interface Props {
    title: string;
    snippet: string;
    href: string;
    metaimg?: {
        url: string;
        alt_txt: string;
    };
}

const { title, snippet, href, metaimg } = Astro.props;
const isRelativeLink = href.startsWith("/") && !href.endsWith(".pdf");
---

<li class="link-card">
    <a href={href} target={isRelativeLink ? "_self" : "_blank"}>
        <h2>
            {title}
            <span>&rarr;</span>
        </h2>
        {
            metaimg ? (
                <div class="img-container">
                    <img
                        src={metaimg.url}
                        alt={metaimg.alt_txt}
                        width="200px"
                        height="200px"
                    />
                    <p>{snippet}</p>
                </div>
            ) : (
                <p>{snippet}</p>
            )
        }
    </a>
</li>
<style>
    .link-card {
        list-style: none;
        display: flex;
        padding: 1px;
        background-color: #23262d;
        background-image: none;
        background-size: 400%;
        border-radius: 7px;
        background-position: 100%;
        transition: background-position 0.6s cubic-bezier(0.22, 1, 0.36, 1);
        box-shadow: inset 0 0 0 1px rgba(255, 255, 255, 0.1);
    }
    .link-card > a {
        width: 100%;
        text-decoration: none;
        line-height: 1.4;
        padding: calc(1.5rem - 1px);
        border-radius: 8px;
        background-color: #23262d;
        opacity: 0.8;
    }
    .link-card:is(:hover, :focus-within) {
        background-position: 0;
        background-image: var(--accent-gradient);
    }
    .link-card:is(:hover, :focus-within) h2 {
        color: rgb(var(--accent-light));
    }

    .img-container {
        display: flex;
        align-items: flex-start;
        padding: 1rem;
    }
    .img-container img {
        border-radius: 8px;
        margin-right: 1rem;
    }
</style>
