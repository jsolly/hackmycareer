---
import Layout from "../layouts/Layout.astro";
import ContactMe from "../components/ContactMe.astro";
import PageSpeedInsights from "../components/PageSpeedInsights.astro";
import LongSollyBio from "../components/LongSollyBio.astro";
import Testimonials from "../components/Testimonials.astro";
import ProjectsList from "../components/ProjectsList.astro";
import Card from "../components/Card.astro";
import * as myResume from "../pages/resume.md";

import jsollyLarge from "../images/jsollyLarge.webp";
---

<Layout
    title="John Solly's Showcase"
    description="A skilled geospatial software engineer"
>
    <h1
        id="showcaseHello"
        class="text-5xl leading-tight tracking-wider text-center mb-10"
    >
        <span>Hello World,</span><span class="block">I'm John!</span>
    </h1>
    <LongSollyBio />
    <Testimonials />
    <ProjectsList />
    <!-- Resume Card After Projects -->
    <div class="mt-8">
        <Card
            title={myResume.frontmatter.title}
            href={myResume.frontmatter.href}
            metaimg={jsollyLarge}
            metaimgAlt="John Solly"
            snippet={myResume.frontmatter.snippet}
        />
    </div>
    <hr class="my-8" />
    <ContactMe />
    <hr class="my-8" />
    <PageSpeedInsights />
</Layout>
