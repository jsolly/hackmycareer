---
import Layout from "../layouts/Layout.astro";
import ContactMe from "../components/ContactMe.astro";
import PageSpeedInsights from "../components/showcase/PageSpeedInsights.astro";
import LongSollyBio from "../components/showcase/LongSollyBio.astro";
import Testimonials from "../components/showcase/Testimonials.astro";
import ProjectsList from "../components/projects/ProjectsList.astro";
import * as myResume from "../pages/resume.md";
import jsollyLarge from "../images/jsollyLarge.webp";
import ProjectCard from "src/components/projects/ProjectCard.astro";
import { fade } from "astro:transitions";
---

<Layout
    title="John Solly's Showcase"
    description="Explore the comprehensive showcase of John Solly's impactful work, projects, and contributions to the geospatial and software engineering fields."
>
    <div class="flex flex-col gap-6">
        <h1
            id="showcaseHello"
            class="text-6xl font-bold leading-none tracking-tight text-center"
            transition:animate={fade({ duration: "0.6s" })}
        >
            <span>Hello World,</span><span class="block text-gradient"
                >I'm John!</span
            >
        </h1>
        <LongSollyBio />
        <Testimonials />
        <ProjectsList />
        <ProjectCard
            title={myResume.frontmatter.title}
            href={myResume.frontmatter.href}
            readingTime={myResume.frontmatter.minutesRead}
            metaimg={jsollyLarge}
            metaimgAlt="John Solly"
            snippet={myResume.frontmatter.snippet}
        />
        <ContactMe />
        <PageSpeedInsights />
    </div>
</Layout>
