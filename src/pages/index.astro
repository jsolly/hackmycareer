---
import Layout from "../layouts/Layout.astro";
import LinkCard from "../components/LinkCard.astro";
---

<Layout
	title="John Solly's Personal Website"
	description="Welcome to JohnSolly.dev, the personal website of John Solly. Explore my portfolio, blog, and geospatial consulting services."
>
	<h1 class="text-5xl font-bold leading-none text-center my-8">
		Welcome to <span class="text-gradient">JohnSolly.dev</span>
	</h1>
	<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 mb-8">
		<LinkCard
			href="/showcase/"
			title="Showcase"
			snippet="Explore my portfolio featuring projects in geospatial analysis and custom software solutions."
		/>

		<LinkCard
			href="https://blogthedata.com/"
			title="Blog"
			snippet="Dive into my posts on geospatial analysis, software development, and tech tools."
			rel="me"
		/>
		<LinkCard
			href="/consulting/"
			title="Consulting"
			snippet="Professional consulting in geospatial applications, DevOps, and software optimization."
		/>
		<LinkCard
			href="/about/"
			title="About"
			snippet="Learn more about my background and professional journey."
			rel="author"
		/>
		<LinkCard
			href="https://www.youtube.com/@johnsolly/"
			title="Tutorial Videos"
			snippet="Watch my video tutorials on geospatial analysis, software development, and tech tools."
			rel="me noopener noreferrer"
		/>
		<LinkCard
			href="https://blogthedata.com/post/my-favorite-youtube-channels-podcasts-newsletters/"
			title="Tech Resources"
			snippet="A curated list of my favorite tech resources, newsletters, podcasts, and YouTubers"
		/>
	</div>
</Layout>

<style>
	.text-gradient {
		background-image: linear-gradient(
			45deg,
			rgb(136, 58, 234),
			rgb(224, 204, 250) 30%,
			white 60%
		);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-size: 400%;
		background-position: 0%;
	}
</style>
